@model List<YouCode.Models.Entity.Blog>;

@{
    ViewData["Title"] = "Index";
}

<div style="padding: 120px 50px; flex-direction: row; display: flex; justify-content: space-evenly; flex-wrap: wrap" class="container">
    @if (Model != null && Model.Count > 0)
    {

        @foreach (var  item in Model)
        {
            <!-- Card Dark -->
            <div class="card" style="width:22em; margin:15px">

                <!-- Card image -->
                <div class="view overlay">
                    <img class="card-img-top" src="@item.BlogImage"   alt="@item.BlogName">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

                <!-- Card content -->
                <div class="card-body elegant-color white-text rounded-bottom">

                    <!-- Social shares button -->
                    <a class="activator waves-effect mr-4"><i class="fas fa-share-alt white-text"></i></a>
                    <!-- Title -->
                    <h4 class="card-title">@item.BlogName</h4>
                    <hr class="hr-light">
                    <!-- Text -->
                    <p class="card-text white-text mb-4">
                    @item.BlogDescription
                    </p>
                    <!-- Link -->
                    <a href="@Url.Action("BlogDetail", "Blog", new { id = item.BlogId})" class="white-text d-flex justify-content-end">
                        <h5>Read more <i class="fas fa-angle-double-right"></i></h5>
                    </a>

                </div>

            </div>
        }
    }
    else
    {
        <p>No blogs found.</p>
    }
</div>
<br />
<div style="padding: 20px;">
    <a href="@Url.Action("CreateBlog", "Blog")" class="btn btn-primary">Create New Blog</a>
</div>

